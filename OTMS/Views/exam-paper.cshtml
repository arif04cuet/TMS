@model Module.Training.Data.ExamPaperPdfModel

<!doctype html>

<html>
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Question</title>
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous"> -->

    <style>
        .table, .table th, .table td {
            border: 1px solid #000;
            border-collapse: collapse;
            table-layout: fixed;
            width: 100%
        }

            .table td {
                padding: 0 10px;
            }

        .center {
            text-align: center;
        }
    </style>

</head>
<body>
    <div class="center">
        <div>গণপ্রজাতন্ত্রী বাংলাদেশ সরকার</div>
        <div>জাতীয় সমাজ সেবা একাডেমি</div>
        <div>সমাজ সেবা অধিদফতর</div>
        <div><a href="www.nass.gov.bd">www.nass.gov.bd</a> </div>
        <br />
        <div>
            প্রশ্নপত্র
        </div>
        <div>
            @Model.CourseName
        </div>
    </div>
    <p> তারিখ: @Model.Date.Day/@Model.Date.Month/@Model.Date.Year</p>
    <br />
    <br />
    @{
        int i = 1;
        foreach (var question in Model.Questions)
        {
            <p>@i. @question.Title</p>
            if (question.Options?.Count() > 0)
            {
                <ul>
                    @foreach (var option in question.Options)
                    {
                        <li>@option.Title</li>
                    }
                </ul>
            }
            i++;
        }
    }
</body>
</html>